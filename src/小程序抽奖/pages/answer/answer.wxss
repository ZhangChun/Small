/* pages/answer/answer.wxss */
page{
   width: 100%;
   height: 100%;
   background: #018ed6;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/bg.png');
}
.container{
   padding: 0;
   height: auto;
}
.banyuan{
   width: 100rpx;
   position: absolute;
   top: -10rpx;
   left: -10rpx;
}
.juxing1{
   width: 700rpx;
   height: 275rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing1.png');
   background-repeat: no-repeat;
   background-size: cover;
   position: relative;
   top: 48rpx;
   left: 15rpx;
   z-index: 5;
   margin: auto;
}
.juxing1 .box{
   width: 80%;
   line-height: 60rpx;
   color: #fff;
   padding-top: 50rpx;
   padding-left: 40rpx;
}
.book{
   width: 684rpx;
   height: 850rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/book.png');
   background-repeat: no-repeat;
   background-size: cover;
   margin: 40rpx auto;
   margin-bottom: 15rpx;
}
.height_70{
   height: 70rpx;
}
.books{
   width: 565rpx;
   height: 172rpx;
   margin: 30rpx auto;
   position: relative;
}
.no_1{
   padding-left: 40rpx;
   padding-right: 20rpx;
   position: relative;
   top: 50%;
   transform: translateY(-50%);
   font-size: 34rpx;
   color: #434343;
}
.active{
   width: 565rpx;
   height: 172rpx;
   margin: 30rpx auto;
   position: relative;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/seleted.png');
   background-size: cover;
}
.active .no_1{
   color: #fff;
}
.no_1::before{
   content:'';
   width: 20rpx;
   height: 20rpx;
   background: #bce1ff;
   border-radius: 50%;
   position: absolute;
   top: 15rpx;
   left: 0;
}
.yes{
   margin-top: 70rpx;
   text-align: center;
   color:#f3a611;
   font-size: 34rpx;
   font-weight: bold;
}
.next{
   text-align: center;
}
.next image{
   width: 306rpx;
}
