/* pages/personal/personal.wxss */
page{
   width: 100%;
   height: 100%;
   background: #018ed6;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/bg.png');
}
.container{
   padding: 0;
   height: auto;
}
.banyuan{
   width: 100rpx;
   position: absolute;
   top: -10rpx;
   left: -10rpx;
}
.juxing1{
   width: 700rpx;
   height: 275rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing1.png');
   background-repeat: no-repeat;
   background-size: cover;
   position: relative;
   top: 48rpx;
   left: 15rpx;
   z-index: 5;
   margin: auto;
}
.juxing1 .box{
   width: 90%;
   position: absolute;
   top: 40rpx;
   left: 42rpx;
   display: flex;
}
.avatar{
   width: 150rpx;
}
.avatar image{
   width: 150rpx;
}
.nickname{
   flex: 1;
   padding-top: 20rpx;
   padding-left: 25rpx;
   line-height: 55rpx;
   color: #fff;
   font-size: 39rpx;
}
.nickname view:last-child{
   padding-top: 10rpx;
}
.nickname image{
   width: 190rpx;
}
.juxing6{
   width: 675rpx;
   height: 583rpx;
   margin: 40rpx auto;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing6.png');
   background-size: 100% 100%;
   padding-top: 65rpx;
}
.flex{
   width: 100%;
   padding: 0 70rpx;
   padding-bottom: 55rpx;
   display: flex;
}
.flex1{
   width: 50%;
   font-size: 36rpx;
   color: #434343;
}
.flex1:last-child{
   color: #0088ff;
}
.juxing7{
   width: 675rpx;
   height: 245rpx;
   margin: 40rpx auto;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing7.png');
   background-size: 100% 100%;
   padding-top: 65rpx;
}
.list{
   width: 100%;
   padding: 0 70rpx;
   padding-bottom: 40rpx;
   box-sizing: border-box;
   display: flex;
}
.li1,.li2{
   width: 50%;
   font-size: 36rpx;
   color: #434343;
}
.li2{
   text-align: right;
}
.li2 image{
   width: 26rpx;
}