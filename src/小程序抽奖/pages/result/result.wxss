/* pages/result/result.wxss */
page{
   width: 100%;
   height: 100%;
   background: #018ed6;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/bg.png');
}
.container{
   padding: 0;
   height: auto;
}
.banyuan{
   width: 100rpx;
   position: absolute;
   top: -10rpx;
   left: -10rpx;
}
.juxing1{
   width: 700rpx;
   height: 275rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing1.png');
   background-repeat: no-repeat;
   background-size: cover;
   position: relative;
   top: 48rpx;
   left: 15rpx;
   z-index: 5;
   margin: auto;
}
.juxing1 .box{
   width: 90%;
   position: absolute;
   top: 40rpx;
   left: 42rpx;
   display: flex;
}
.avatar{
   width: 150rpx;
}
.avatar image{
   width: 150rpx;
}
.nickname{
   flex: 1;
   padding-top: 20rpx;
   padding-left: 25rpx;
   line-height: 55rpx;
   color: #fff;
   font-size: 39rpx;
}
.juxing8{
   width: 675rpx;
   height: 817rpx;
   margin: 40rpx auto;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing8.png');
   background-size: 100% 100%;
   padding-top: 65rpx;
}
.score{
   width: 150rpx;
   height: 150rpx;
   line-height: 150rpx;
   text-align: center;
   border-radius: 50%;
   border: #ddd solid 5px;
   margin: auto;
}
.answer_score{
   text-align: center;
   color: #434343;
   padding-top: 15rpx;
   font-size: 42rpx;
}
.winning{
   width: 575rpx;
   height: 288rpx;
   margin: 30rpx auto;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/seleted.png');
   background-size: 100% 100%;
}
.winning .content{
   padding: 20rpx 47rpx;
   text-align: center;
   color: #fff;
   font-size: 42rpx;
}
.fangpian{
   text-align: center;
   color: #fff;
   font-size: 30rpx;
   padding-top: 30rpx;
}
.xing{
   text-align: center;
}
.xing image{
   width: 60rpx;
   padding: 20rpx 10rpx;
}
.j1{
   color: #434343;
   text-align: center;
   font-size: 30rpx;
}
.flex{
   width: 575rpx;
   margin: auto;
   padding-top: 55rpx;
   display: flex;
}
.flex .flex1{
   color: #0174d6;
   font-size: 28rpx;
}
.flex1:first-child{
   width: 45%;
}
.flex1:last-child{
   width: 55%;
   text-align: right;
}
.footer{
   width: 675rpx;
   margin: auto;
   display: flex;
}
.footer .f1{
   text-align: center;
   width: 50%;
   padding-bottom: 50rpx;
}
.footer .f1 image{
   width: 256rpx;
}