/**index.wxss**/
page{
   width: 100%;
   height: 100%;
   background: #018ed6;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/bg.png');
}
.container{
   padding: 0;
}
.isShow{
   display: block;
}
.isHide{
   display: none;
}
.isScroll{
   height: auto;
}
.banyuan{
   width: 100rpx;
   position: absolute;
   top: -10rpx;
   left: -10rpx;
}
.juxing1{
   width: 700rpx;
   height: 275rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing1.png');
   background-repeat: no-repeat;
   background-size: cover;
   position: relative;
   top: 48rpx;
   left: 15rpx;
   z-index: 5;
   margin: auto;
}
.juxing1 .box{
   width: 90%;
   position: absolute;
   top: 40rpx;
   left: 42rpx;
   display: flex;
}
.avatar{
   width: 150rpx;
}
.avatar image{
   width: 150rpx;
}
.nickname{
   flex: 1;
   padding-top: 20rpx;
   padding-left: 25rpx;
   line-height: 55rpx;
}
.nickname {
   color: #fff;
   font-size: 36rpx;
}
.juxing2{
   width: 670rpx;
   height: 322rpx;
   margin: auto;
   margin-top: 42rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing2.png');
   background-size: cover;
}
.juxing2 .btn1{
   width: 290rpx;
   height: 90rpx;
   padding-top: 30rpx;
   padding-left: 28rpx;
}
.juxing3{
   width: 670rpx;
   height: 240rpx;
   margin: auto;
   margin-top: 32rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing3.png');
   background-size: cover;
}
.juxing3 .btn1{
   width: 560rpx;
   height: 90rpx;
   padding-top: 30rpx;
   padding-left: 28rpx;
}
.juxing4{
   width: 670rpx;
   height: 280rpx;
   margin: auto;
   margin-bottom: 100rpx;
   margin-top: 32rpx;
   display: flex;
}
.box1,.box2{
   width: 47%;
}
.box1{
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing4.png');
   background-size: cover;
}
.box2{
   margin-left: 6%;
   box-sizing: border-box;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/juxing5.png');
   background-size: cover;
}
.box1 .btn1,.box2 .btn1{
   width: 257rpx;
   height: 70rpx;
   padding: 27rpx 0 0 27rpx;
}

/*****活动规则*****/
.zhe{
   width: 100%;
   height: 100%;
   background: black;
   opacity: 0.5;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 10;
}
.rules{
   width: 90%;
   position: fixed;
   top: 110rpx;
   left: 50%;
   z-index: 15;
   transform: translateX(-50%);
}
.rules .r1{
   width: 100%;
   height: 810rpx;
   background: url('http://flynew.oss-cn-hangzhou.aliyuncs.com/game/wechat/tzj/pop_4.png');
   background-size: cover;
   text-align: center;
}
.rules .r1 .img1{
   width: 440rpx;
   margin-top: 65rpx;
}
.rules .r1 .img2{
   width: 590rpx;
   margin-top: 53rpx;
}
.rules .start{
   width: 100%;
   text-align: center;
   margin-top: 100rpx;
}
.rules .start image{
   width: 304rpx;
}
/*****赛场数据*****/
.r1 .title{
   font-size: 60rpx;
   color: #0174d6;
   font-weight: bold;
   padding-top: 95rpx;
   padding-bottom: 93rpx;
   letter-spacing: 10rpx;
}
.r1 .t1{
   color: #000000;
   padding-bottom: 50rpx;
}
.r1 .t1 span{
   color: #0174d6;
   padding: 0 12rpx;
   font-weight: bold;
}
